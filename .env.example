# Nova Gateway configuration
NEXT_PUBLIC_NOVA_API_URL=http://domain/ai
NEXT_PUBLIC_NOVA_API_KEY=nova-api-key
# Optional switch to disable calculator /ai requests while keeping the assistant active
NEXT_PUBLIC_DISABLE_CALCULATOR_NOVA=false

# Development proxy target (with 5-minute timeout for image generation)
NOVA_DEV_PROXY_TARGET=http://localhost:4000

# Optional CoinDesk API key for live asset search in the token selector
NEXT_PUBLIC_COINDESK_API_KEY=
# Optional override for the CoinDesk asset search endpoint
NEXT_PUBLIC_COINDESK_ASSET_SEARCH_ENDPOINT=https://data-api.coindesk.com/index/cc/v1/search/asset
